//-
    👇👇👇👇 SVG 👇👇👇👇

mixin svg(myclass,viewBox,path)
    svg(class=myclass xmlns="http://www.w3.org/2000/svg" viewBox=viewBox)
        path(d=path)

//- 
    👇👇👇👇 Image 👇👇👇👇
mixin img(im ,cls='')
    img(class= cls src=require(`./../assets/images/${im}`).default)

//- 
    👇👇👇👇 ResponsiveImage 👇👇👇👇
mixin picture(im ,media,cls='')
    picture
        img(class= cls sizes="(max-width: 1400px) 100vw, 1400px"
            srcset=media
            src=require(`./../assets/images/${im}`).default)
